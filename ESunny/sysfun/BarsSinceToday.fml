//--------------------------------------------------------------
// 简称: BarsSinceToday
// 名称: 当天的第一个数据到当前的Bar数
// 类型: 用户函数
// 输出: Numeric
//--------------------------------------------------------------
Vars
	NumericSeries ReBars;
Begin
	If(CurrentBar == 0 || Date != Date[1])
	{
		ReBars = 0;
	}Else
	{
		ReBars = ReBars + 1;
	}
	Return ReBars;
End

//--------------------------------------------------------------
// 简称: Detrend
// 名称: 求趋势平滑
// 类型: 用户函数
// 输出: Numeric
//--------------------------------------------------------------
Params
	NumericSeries Price(1); 
	Numeric Length(10);
Vars
	Numeric Offset;
	NumericSeries AvgValue;
	Numeric DetrendValue;
Begin
	Offset = Length * 0.5 + 1 ;
	AvgValue = Average( Price, Length);
	DetrendValue = Price - AvgValue[Offset];
	Return DetrendValue;
End